<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="2columns-left" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="content">
            <block name="something-list" template="Umc_Sample::something/list.phtml">
                <arguments>
                    <argument name="listSomething" xsi:type="object">Umc\Sample\ViewModel\Something\ListSomething</argument>
                    <argument name="formatter" xsi:type="object">Umc\Crud\ViewModel\Formatter</argument>
                    <argument name="somethingUrl" xsi:type="object">Umc\Sample\ViewModel\Something\Url</argument>
                    <argument name="somethingElseUrl" xsi:type="object">Umc\Sample\ViewModel\SomethingElse\Url</argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>
